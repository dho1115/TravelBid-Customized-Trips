

@model CustomizedTrips.Models.TravelAgents.TravelAgentInfo2

@{
    ViewData["Title"] = "AgentHomePage";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<head>
    <style type="text/css">
        .col-md-3 {
            border-right: 1px solid black;
            background-color: lightyellow;
            padding-right: 5px;
        }

        a {
            font-size: 18px;
            color: black;
        }
    </style>
</head>

<body>

    <nav class="navbar" style="background-color: beige; margin-top: 15px">
        <a asp-controller="VacationForm" asp-action="Index" asp-route-id="@Model.id">TRAVEL QUEUE</a>
        <a asp-controller="VacationForm" asp-action="Create">LOG OUT</a>
    </nav>

    <div class="container" style="width: 100%; height: 100%; border: 1px solid; background-color: lightcyan">

        <h1 style="text-align: center;">Welcome, @Model.FirstName!</h1>

        <div class="row">
            <div class="col-lg-5" style="background-color: beige; border-right: 1px solid black;">
                <h3>E-mail: @Model.email</h3>
                <h3>Phone: @Model.phoneNumber</h3>
                <h3>Years Experience: @Model.YearsExperience</h3>
                <h3>Favorite Destinations: @Model.FavoriteDestinations</h3>
            </div>

            <div class="col-lg-7" style="background-color: ghostwhite">

            </div>
        </div>
    </div>   
</body>




