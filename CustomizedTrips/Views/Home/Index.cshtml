@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout2";
}

<head>
    <link href="https://fonts.googleapis.com/css?family=Tangerine" rel="stylesheet">

    <style type="text/css">
        .tangerine {
            text-align: center;
            font-family: 'Tangerine', cursive;
            font-size: 100px;
            color: orangered;
        }

        a:hover, a:visited, a:link {
            text-decoration: none;
        }

        body {
           padding: 0px;
           background-color: gold
        }
    </style>    
</head>

<body>
    <div style="height:1vw">

    </div>
    <!--Carousel Start-->
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel" style="width: 100%">
                <div class="carousel-inner" style="width: 100%">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Banff.jpg" alt="Banff" style="width: 100%; height: 450px">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/CostaRicaRainForest.jpg" alt="Costa Rica" style="width: 100%; height: 450px">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/HongKong.jpg" alt="Hong Kong" style="width: 100%; height: 450px">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/changmaimountains.jpg" alt="ChangMai" style="width: 100%; height: 450px">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Bellagio.jpg" alt="Hong Kong" style="width: 100%; height: 450px">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
           </div>
<!--Carousel End-->                      
    
    <div style="height: 5vw">

    </div>
        

    <a asp-controller="Home" asp-action="Welcome"><h1 class="tangerine" ><strong>ENTER</strong></h1></a>
    
</body>
