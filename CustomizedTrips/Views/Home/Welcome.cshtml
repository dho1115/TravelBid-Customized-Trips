

@model CustomizedTrips.Models.Traveler.VacationRequest

@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    html {
        height: 100%
    }

    body {
        background-size: cover;
    }

    .vacationform {
        border: 3px solid red;
        background-color: antiquewhite;
    }
</style>
<body class="NewOrleans" style="padding-top: 0px">
    <h1>Welcome To Travel-Bid!!!</h1>
    <div class="container" style="background-color: antiquewhite">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6 vacationform">
                <form asp-controller="VacationForm" asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" required />
                        
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" required />
                        
                    </div>

                    <div class="form-group">
                        <label asp-for="Destination" class="control-label"></label>
                        <input asp-for="Destination" class="form-control" required />
                        
                    </div>

                    <div class="form-group">
                        <label asp-for="Budget" class="control-label"></label>
                        <input asp-for="Budget" class="form-control" />
                        
                    </div>

                    <div class="form-group">
                        <label asp-for="DestinationDetails" class="control-label"></label>
                        <textarea asp-for="DestinationDetails" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        
                    </div>

                    <div class="form-group">
                        <label asp-for="email" class="control-label"></label>
                        <input asp-for="email" class="form-control" required />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>

                </form>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</body>


