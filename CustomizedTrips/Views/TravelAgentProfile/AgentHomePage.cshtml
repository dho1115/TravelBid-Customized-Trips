

@model CustomizedTrips.Models.TravelAgents.TravelAgentInfo

@{
    ViewData["Title"] = "AgentHomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style type="text/css">
        .col-md-3 {
            border-right: 1px solid black;
            background-color: lightyellow;
            padding-right: 5px;
        } 

        a {
            font-size: 18px;
            color: black;
        }
    </style>
</head>

<body>
    <nav class="navbar" style="background-color: palevioletred; margin-top: 15px">
        <a asp-controller="VacationForm" asp-action="Index">TRAVEL QUEUE |</a>        
        <a asp-controller="VacationForm" asp-action="Create">LOG OUT</a>
    </nav>
        
    <div class="container col-lg-12" style="background-color: palevioletred; width: 100%">
        <h2>Travel Agent Home Page</h2>
        <h3>Welcome, @Model.FirstName  @Model.LastName!</h3>
        
        <div class="container" style="height: 100%">
            <div class="row">
                <div class="col-md-3">
                    <h5>@Model.email</h5>
                    <h5>PHONE: @Model.phoneNumber</h5>
                    <h5>YEARS EXPERIENCE: @Model.YearsExperience</h5>
                    <h5>FAVORITE DESTINATIONS: @Model.FavoriteDestinations</h5>
                </div>
                <div class="col-md-9">
                </div>
            </div>
        </div>
    </div>
</body>






